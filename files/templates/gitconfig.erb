[user]
	name = ayato-git
	email = ayato-git@users.noreply.github.com
	signingkey = <%= @usr_home %>/.ssh/id_ed25519.pub
[color]
	ui = true
[github]
	user = ayato-git
[url "git@github.com:"]
	insteadOf = https://github.com/
[ghq]
	root = <%= @usr_home %>/Repositories
[core]
	excludesfile = <%= @usr_home %>/.config/git/ignore
	editor = nvim
	quotepath = false #日本語文字化け回避
[pager]
	difftool = true
	log = <%= @brew_prefix %>/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = <%= @brew_prefix %>/share/git-core/contrib/diff-highlight/diff-highlight | less
[interactive]
	diffFilter = <%= @brew_prefix %>/share/git-core/contrib/diff-highlight/diff-highlight
[diff]
	external = difft # github.com/Wilfred/difftastic
	compactionHeuristic = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = <%= @usr_home %>/.config/git/allowed_signers
[commit]
	gpgsign = true
	template = <%= @usr_home %>/.config/git/message
[tag]
	gpgsign = true
[pull]
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main


